<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head") %>

<body>
    <div id="page">

        <%- include("./partials/nav") %>
        <main>
            <div class="menu-wrapper">
                <div class="menu">
                    <form action="/create" method="POST">
                        <div class="mb-2">
                            <label for="title" class="form-label" class="form-control">Title</label>
                            <input type="text" name="title" id="title" class="form-control">
                        </div>
                        <div class="mb-2">
                            <label for="snippet" class="form-label">Snippet</label>
                            <input type="text" name="snippet" id="snippet" class="form-control">
                        </div>
                        <div class="mb-2">
                            <label for="note-body" class="form-label">Body</label>
                            <textarea name="body" id="body" cols="30" rows="10" class="form-control"></textarea>
                        </div>

                        <div class="mb-2">
                            <button class="btn btn-primary" type="submit">Save</button>

                            <button type="reset" class="btn btn-danger">Clear</button>
                        </div>

                    </form>
                </div>
        </main>

        <footer></footer>
    </div>
</body>

</html>